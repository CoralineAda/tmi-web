<%= turbo_frame_tag "#{question.key}_frame" do %>
	<%= form_with model: response, url: survey_response_path(response, format: :turbo_stream, data: { turbo_frame: "#{question.key}_frame" }) do |f| %>
		<%= f.text_area question.codes_field, value: response.read_attribute(question.codes_field).try(:sort).try(:join, ', '), multiple: true %>
		<%= hidden_field_tag "question", "#{question.key}" %>
		<%= f.submit "Save", class: "small" %>
	<% end %>
<% end %>
