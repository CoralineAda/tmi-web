<h2>Codes for "<%= @section_name %>"</h2>

<div class="flip" id="flip-left">
	<%= link_to "<", codebook_path(@previous_section) %>
</div>
<div class="flip" id="flip-right">
	<%= link_to ">", codebook_path(@next_section) %>
</div>


<div class="two-column">
	<div class="column">
		<h3>Alphabetically</h3>
		<ul class="list">
			<% @frequencies.sort{|f1, f2| f1[0] <=> f2[0]}.each do |k,v| %>
				<li><%= "#{k}: #{v}" %></li>
			<% end %>
		</ul>
	</div>
	<div class="column">
		<h3>By Frequency</h3>
		<ul class="column list">
			<% @frequencies.each do |k,v| %>
				<li><%= "#{k}: #{v}" %></li>
				<% end %>
		</ul>
	</div>
</div>
