<%- title "Responses to #{@question.humanize} Question" %>

<h1><%= @responses.count %> Responses to "<%= @question.humanize %>".</h1>

<h2>Reference</h3>
	<ul class="word-cloud">
		<li><%= link_to "Codes for #{@question.humanize}", codebook_path(@question.key), class: "jump-link" %></li>
	</ul>

<table>
	<thead>
		<tr>
			<th>Response</th>
			<th>Answer</th>
			<th><%= link_to "Codes", codebook_path(@question.key), class: "jump-link-light" %></th>
		</tr>
	</thead>
	<tbody>
		<% counter = 0 %>
		<% @responses.each do |response| %>
			<% alt = counter % 2 == 1 ? "" : "alt" %>
			<% counter += 1 %>
			<tr class="<%= alt %>">
				<td class="label">
					<%= link_to response.id, response, class: "jump-link" %>
				</td>
				<td class="response">
					<% @response_value = response.read_attribute(@question.key) %>
					<% if @response_value.respond_to?(:join) %>
						<% @response_value = @response_value.sort.join(", ") %>
					<% end %>
					<%= @response_value %>
				</td>
				<td class="form-entry">
					<%= form_with model: response do |f| %>
						<%= f.text_area @question.codes_field, value: response.read_attribute(@question.codes_field).try(:sort).try(:join, ", "), multiple: true %>
						<%= f.submit "Save", class: "small" %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
